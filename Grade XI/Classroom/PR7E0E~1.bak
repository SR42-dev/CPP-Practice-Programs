/* A program that assigns an array into another array with its elements
	in the same order and in reverse */

#include <iostream.h>

{
	char str1[15], str2[15], rev[15];
	int i, j;
	gets (str1);
	for (i=0;str1[i]!=0;i++)
		str2[i] = str1[i];
	str2[i] = 0;
	i = 0;
	for (j=(i-1);j>=0;j--,i++)
		rev[i] = str1[j];
	rev[i] = 0;
}
